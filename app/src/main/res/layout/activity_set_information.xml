<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_information__parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.humming.ascwg.activity.SetInformationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/tab_text"
                    android:textSize="17sp" />
            </FrameLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/activity_set_information__head_img_layout"
        style="@style/item_white_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/my_information_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/heard_image"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/text_17" />


        <com.humming.ascwg.component.CircleImageView
            android:id="@+id/activity_set_information__head_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:src="@drawable/asc_logo"
            app:civ_border_color="@color/garys"
            app:civ_border_width="3dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/right_w" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/garys"></View>

    <com.humming.ascwg.component.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        android:layout_marginTop="10dp"
        app:mrl_rippleOverlay="true">


        <LinearLayout
            android:id="@+id/activity_set_information__nick_layout"

            style="@style/item_white_bg">

            <TextView
                style="@style/item_white_bg_text"
                android:text="@string/nick_name" />

            <TextView
                android:id="@+id/activity_set_information__nick"
                style="@style/item_white_bg_text"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/gray" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/right_w" />

        </LinearLayout>
    </com.humming.ascwg.component.MaterialRippleLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/garys"></View>
    <com.humming.ascwg.component.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">


        <LinearLayout
            android:id="@+id/activity_set_information__vip_layout"

            style="@style/item_white_bg">

            <TextView
                style="@style/item_white_bg_text"
                android:text="@string/vip_position" />

            <TextView
                android:id="@+id/activity_set_vip__position"
                style="@style/item_white_bg_text"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="@string/bigger_vip"
                android:textColor="@color/gray" />

           <!-- <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/right_w" />-->

        </LinearLayout>
    </com.humming.ascwg.component.MaterialRippleLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/garys"></View>

    <com.humming.ascwg.component.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/activity_set_information__birthday_layout"
            style="@style/item_white_bg">

            <TextView
                style="@style/item_white_bg_text"
                android:text="@string/birthday" />

            <TextView
                android:id="@+id/activity_set_information__birthday"
                style="@style/item_white_bg_text"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1989-06-01"
                android:textColor="@color/gray" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/right_w" />

        </LinearLayout>
    </com.humming.ascwg.component.MaterialRippleLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/garys"></View>

    <com.humming.ascwg.component.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/activity_set_information__sex_layout"
            style="@style/item_white_bg">

            <TextView
                style="@style/item_white_bg_text"
                android:text="@string/sex" />

            <TextView
                android:id="@+id/activity_set_information__sex"
                style="@style/item_white_bg_text"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="ç”·"
                android:textColor="@color/gray" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/right_w" />
        </LinearLayout>
    </com.humming.ascwg.component.MaterialRippleLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/garys"></View>

    <com.humming.ascwg.component.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/activity_set_information__address_layout"
            style="@style/item_white_bg">

            <TextView
                style="@style/item_white_bg_text"
                android:text="@string/address" />

            <TextView
                android:id="@+id/activity_set_information__address"
                style="@style/item_white_bg_text"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/gray" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/right_w" />
        </LinearLayout>

    </com.humming.ascwg.component.MaterialRippleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/activity_set_information__switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/tab_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/bank_code"
            android:textColor="@color/get_ident" />

        <EditText
            android:id="@+id/activity_set_information__bank_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_white"
            android:hint="@string/please_enter_name"
            android:inputType="number"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/tab_text"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_set_information__confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_margin="@dimen/padding_20"
        android:background="@drawable/border_white"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/text_16" />
    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:paddingLeft="@dimen/activity_horizontal_margin"
         android:text="@string/personalized_signature" />-->

    <!--<MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            style="@style/item_white_bg"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/activity_set_information__signature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="@string/please_enter_qianming"
                android:text="" />
        </LinearLayout>
    </MaterialRippleLayout>-->
</LinearLayout>
