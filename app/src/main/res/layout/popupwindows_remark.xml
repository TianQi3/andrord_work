<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_30"
            android:layout_marginRight="@dimen/magin_30"
            android:background="@drawable/bg_border_radius_remark"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/magin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/please_write_message"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/height_20"
                android:paddingRight="@dimen/height_20">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contract"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_14" />


                <EditText
                    android:id="@+id/contact_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_border_radius_white"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/phone"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_14" />


                <EditText
                    android:id="@+id/phone_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_border_radius_white"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="备注"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/remark_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_border_radius_white"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remark__cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:text="取消"
                    android:textColor="@color/get_ident"
                    android:textSize="@dimen/text_18" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"></View>

                <TextView
                    android:id="@+id/remark_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:text="提交"
                    android:textColor="@color/get_ident"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>