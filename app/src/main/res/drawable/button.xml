<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 按下的效果 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d8d8d8" />
            <solid android:color="#92FFFFFF"/>
            <!-- 
            <gradient android:angle="-90" android:endColor="#0fd8d8d8" android:startColor="#947953" />
             -->
        </shape></item>
    <!-- 当按钮被选中后的效果 -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b7b9ac" />
            <solid android:color="#d3d8c2" />
        </shape></item>
    <!-- 按钮效果 -->
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffffff" />
            <!-- 
            <gradient android:angle="-90" android:endColor="#cec4b1" android:startColor="#14dddddd" />
             -->
            <solid android:color="#26FFFFFF"/>
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape></item>

</selector>